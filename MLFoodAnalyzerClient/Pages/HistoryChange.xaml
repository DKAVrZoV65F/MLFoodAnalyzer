<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MLFoodAnalyzerClient.Pages.HistoryChange"
             xmlns:extension="clr-namespace:MLFoodAnalyzerClient.Extension"
             BackgroundColor="{AppThemeBinding Light={StaticResource White200}, Dark={StaticResource Black}}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <extension:Settings x:Key="settings"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*"
          Margin="20, 40, 20, 0"
          BindingContext="{StaticResource settings}">

        <!-- Display data -->
        <Border
            IsVisible="True"
            Stroke="{AppThemeBinding Default={StaticResource Black}, Light={StaticResource White200}, Dark={StaticResource Black}}"
            Margin="0, 10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <ListView
                x:Name="historyListView"
                Background="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray970}}"
                ItemsSource="{Binding Histories}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <HorizontalStackLayout
                                    Spacing="50"
                                    MinimumHeightRequest="50">
                                    <Label
                                        Text="{Binding Date}"
                                        FontFamily="RegularFont"
                                        FontSize="{Binding Path=FSize}" />
                                    <Label
                                        Text="{Binding HistoryChange}"
                                        FontFamily="RegularFont"
                                        FontSize="{Binding Path=FSize}" />
                                </HorizontalStackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        
    </Grid>
</ContentPage>